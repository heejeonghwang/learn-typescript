//타입스크립트 설정파일 - 이 파일이 존재하는 프로젝트 기준으로 tsc를 돌리게 되면 tsc에 해당하는 파일을 가지고 compilerOptions로 변환하게 된다
{
  "compilerOptions": {
    //컴파일할 때 부가적인 옵션
    //타입스크립트 변환할때 타입스크립트가 이 프로젝트에 어떻게 이야기할 지 설정하는 곳
    "allowJs": true, //이 프로젝트안에 자바스크립트를 허용하겠다.
    "checkJs": true, //@ts-check같은 기능
    "noImplicitAny": true // 모든 타입에 대해서 최소한 "any"라고 하는 정말 기본적인 타입이라도 넣어야한다.
  }
}
